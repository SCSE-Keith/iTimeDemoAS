<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="组名"
        android:textColor="#000000"
        android:id="@+id/text_group_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#000000"
        android:text="其他信息"
        android:id="@+id/text_other_info"
        android:layout_below="@+id/text_group_name"
        android:layout_alignLeft="@+id/text_group_name"
        android:layout_alignStart="@+id/text_group_name"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成员数"
        android:textColor="#808080"
        android:id="@+id/text_members_count"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout><!-- From: file:/Users/aa/AndroidstudioProjects/iTimeDemo/iTimeDemo/src/main/res/layout/list_item_group.xml -->